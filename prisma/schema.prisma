generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Category {
  GULBI_10
  GULBI_20
  BARLEY_GULBI
  FERMENTED_ETC
}


model User {
  id        String     @id @default(cuid())
  kakaoId   String?    @unique
  password  String?
  name      String?
  email     String?    @unique
  image     String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  role      UserRole   @default(User)
  cartItems CartItem[]
  orders    Order[]
}

model Product {
  id             String      @id @default(cuid())
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  name           String      @db.VarChar(100)
  imageUrl       String?     @db.VarChar(255)
  description    String?
  price          Int
  stock          Int         @default(0)
  origin         String      @db.VarChar(50)
  weight         String?     @db.VarChar(50)
  shippingFee    Int         @default(3500)
  shippingMethod String      @default("택배") @db.VarChar(50)
  minOrderQty    Int         @default(1)
  category Category 
  CartItem       CartItem[]
  orderItems     OrderItem[]
}

model CartItem {
  id        Int      @id @default(autoincrement())
  userId    String
  productId String
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Order {
  id           String      @id @default(cuid())
  imp_uid      String
  merchant_uid String      @unique
  totalPrice   Int
  buyerName    String
  buyerTel     String
  address      String
  status       String      @default("PAID")
  createdAt    DateTime    @default(now())
  userId       String
  orderItems   OrderItem[]
  user         User        @relation(fields: [userId], references: [id])

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

enum UserRole {
  User
  Admin
}
